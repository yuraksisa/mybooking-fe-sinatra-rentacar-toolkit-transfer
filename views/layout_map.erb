    #map {
      height: 400px;
      width: 100%;
    }
  </style>
</head>

  <body <% if request.path == '/' %>class="home"<%end%>>
    <!-- Preloader -->
    <div class="preloader">
      <div id="followingBallsG">
        <div id="followingBallsG_1" class="followingBallsG"></div>
        <div id="followingBallsG_2" class="followingBallsG"></div>
        <div id="followingBallsG_3" class="followingBallsG"></div>
        <div id="followingBallsG_4" class="followingBallsG"></div>
      </div>
    </div>
    <!-- //Preloader -->
    
    <!-- Header -->
    <header class="header" role="banner">
      <div class="wrap">
        <!-- Logo -->
        <div class="logo">
          <a href="/" title="Inicio"><img src="/images/transfers.jpg" alt="Inicio" /></a>
        </div>
        <!-- //Logo -->
        
        <!-- Main Nav -->
        <nav role="navigation" class="main-nav">
          <ul>
            <li><a href="/" title="">Inicio</a></li>
            <li><a href="/condiciones" title="Condiciones de alquiler">Condiciones</a></li>
            <li class="active"><a href="/contacto" title="Contacto">Contacto</a></li>
          </ul>
        </nav>
        <!-- //Main Nav -->
      </div>
    </header>
    <!-- //Header -->
  
  <!-- Main -->
  <main class="main" role="main">

    <% unless page.title.nil? || page.title.empty? %>
    <header class="site-title color">
      <div class="wrap">
        <div class="container">
          <h1><%=page.title%></h1>
        </div>
      </div>
    </header>
    <% end %>

    <!-- The content in the layout -->
    <%= yield %>
    <!-- //The content in the layout --> 

  </main>
  <!-- //Main -->
  
  <!-- Footer -->
  <%= partial :footer %>
  <!-- //Footer -->
  
  <!-- JS Page Level -->
  <script src="/js/theme.js"></script>
  <% if !page.scripts_source.nil? && !page.scripts_source.empty? %>
    <%= page.scripts_source %>
  <% end %>

  <script>
      function initMap() {
          var uluru = {lat: 39.9841, lng: 4.1133};
          var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 12,
              center: uluru
          });
          var marker = new google.maps.Marker({
              position: uluru,
              map: map
          });
      }
  </script>

  <script async defer
          src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDrcnboUQqXVOyMGzPNsudyUkP552CkW4&callback=initMap">
  </script>

  </body>
